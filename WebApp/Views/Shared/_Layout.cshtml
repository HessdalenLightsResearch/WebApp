@using WebApp.Resources;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        
        <nav class="navbar navbar-expand-lg navbar-dark bg-black">
         <div class="container-fluid">
                
          
          <div class="collapse navbar-collapse" id="main_nav">
        	<ul class="navbar-nav">
                <li style="padding-left : 15rem" ></li>
                        <li class="nav-item"> <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/Media/Logo-HomeLink.svg" style="width:79%;height:79%; "></a> </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="ComingSoon"> History </a></li>
        		<li class="nav-item dropdown">
        		   <a class="nav-link  dropdown-toggle" href="#" data-bs-toggle="dropdown">  Live cams  </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="ComingSoon"> Cam 1</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="ComingSoon"> Cam 2 </a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="ComingSoon"> Cam 3 </a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Comingsoon"> Cam 4 </a></li>
        		    </ul>
        		</li>
                <li class="nav-item dropdown">
        		   <a class="nav-link  dropdown-toggle" href="#" data-bs-toggle="dropdown">  Reports  </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReportYourSighting"> Report your sighting!</a></li>
                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="SightingsArchive"> Archive </a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="ComingSoon"> Statistics </a></li>
        		    </ul>
        		</li>
        	</ul>
          </div> <!-- navbar-collapse.// -->
         </div> <!-- container-fluid.// -->
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
